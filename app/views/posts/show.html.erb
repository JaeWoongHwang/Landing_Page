<!-- Table Striped Rows -->
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th class="hidden-sm">Title</th>
        <th>Content</th>
        <th>Created_at</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @post.user.email %></td>
        <td>  <%= @post.title %></td>
        <td class="hidden-sm">  <%= @post.content %></td>
        <td><%= @post.created_at %></td>
      </tr>
    </tbody>
  </table>
</div>
<!-- End Table Striped Rows-->
<%= link_to edit_post_path(@post), class: "btn u-btn-outline-darkgray rounded-0 g-mr-10 g-mb-15" do %>
  <%= t 'post.edit' %>
<% end %>
<%= link_to @post, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn u-btn-outline-darkgray rounded-0 g-mr-10 g-mb-15" do %>
  <%= t 'post.delete' %>
<% end %>
<%= link_to posts_board_path, class: "btn u-btn-outline-darkgray rounded-0 g-mr-10 g-mb-15" do %>
  <%= t 'post.back' %>
<% end %>
